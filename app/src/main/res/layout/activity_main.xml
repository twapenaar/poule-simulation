            android:layout_columnWeight="1"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:textSize="20dp"
            android:layout_margin="5sp"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView"
            android:layout_columnWeight="1"
